<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Public"
            android:textColor="@color/color_text_black"
            android:textSize="22sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/sell_ed_title"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/edittext_chat"
                    android:hint="标题"
                    android:paddingLeft="5dp"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/sell_ed_detail"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittext_chat"
                    android:gravity="top"
                    android:hint="表述下你的闲置"
                    android:minLines="3"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:textSize="15sp" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center" />

                <Button
                    android:id="@+id/bt_add_img"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button_login2"
                    android:text="添加照片" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <EditText
                    android:id="@+id/sell_ed_price"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittext_chat"
                    android:hint="￥价格"
                    android:numeric="integer"
                    android:paddingLeft="5dp"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/sell_bt_send"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_bg_full_orange"
                    android:layout_gravity="center_horizontal"
                    android:text="发布"
                    android:textColor="#FFF"
                    android:textSize="15sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
