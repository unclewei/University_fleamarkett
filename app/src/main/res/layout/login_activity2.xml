<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/login1">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/login_activity2_et_phone_nub"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:textSize="15dp"
            android:paddingLeft="8dp"
            android:hint="请输入电话号码"
            android:layout_gravity="center"
            android:background="@drawable/bg_edittext_selector"
android:layout_marginRight="10dp"
            android:numeric="integer"/>

        <Button
            android:id="@+id/login_activity2_bt_send_sms"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="13dp"
            android:background="@drawable/button_login2"
            android:text="发送短信" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/login_activity2_et_verification"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:textSize="15dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="8dp"
            android:background="@drawable/bg_edittext_selector"
            android:layout_gravity="center"
            android:hint="请输入验证码"

            android:numeric="integer"/>

        <Button
            android:id="@+id/login_activity2_bt_next"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/button_login2"
            android:textSize="13dp"
            android:text="确认" />
    </LinearLayout>
</LinearLayout>