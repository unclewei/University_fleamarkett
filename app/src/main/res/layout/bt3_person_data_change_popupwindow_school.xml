<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/popupwindow_school_spinner1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Spinner
        android:id="@+id/popupwindow_school_spinner2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Spinner
        android:id="@+id/popupwindow_school_spinner3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Spinner
        android:id="@+id/popupwindow_school_spinner4"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/popupwindow_school_buttton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定" />
</LinearLayout>